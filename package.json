{
  "name": "desktop_base",
  "version": "1.0.0",
  "description": "",
  "main": "electron/dist/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sars-Desenvolvimento-de-Software/desktop_base.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Sars-Desenvolvimento-de-Software/desktop_base/issues"
  },
  "homepage": "https://github.com/Sars-Desenvolvimento-de-Software/desktop_base",
  "type": "module",
  "scripts": {
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:electron": "wait-on --timeout 50000 http://localhost:5173 && electron electron/dist/main.js",
    "dev:desktop": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:mobile":"npm --prefix mobile start",
    "dev": "concurrently \"npm run dev:desktop\" \"npm run dev:mobile\"",
    "build:ts": "tsc -p electron/tsconfig.json",
    "build:frontend": "npm --prefix frontend run build",
    "build": "npm run build:ts && npm run build:frontend",
    "start": "electron electron/dist/main.js",
    "dist": "npx electron-builder --win"
  },
  "dependencies": {
    "@azure/msal-node": "^3.8.4",
    "electron-store": "^11.0.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^25.0.3",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "electron": "^39.0.0",
    "electron-devtools-installer": "^4.0.0",
    "tsx": "^4.21.0",
    "typescript": "^4.9.5",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "br.com.sarsdev.",
    "productName": "",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "electron/dist/**/*",
      "frontend/dist/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": ""
    },
    "publish": null
  }
}
