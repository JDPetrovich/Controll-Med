{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "rootDir": "src",
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "electron"
        ]
    },
    "include": [
        "src/**/*"
    ]
}